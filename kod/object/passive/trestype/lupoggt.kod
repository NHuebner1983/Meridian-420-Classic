LupoggTreasure is TreasureType

constants:

   include blakston.khd

classvars:

   viTreasure_num = TID_POGG

properties:

   /// decent chance of getting an outstanding item
   piItem_att_chance = 5
   piDIff_seed = 8

messages:

   Constructed()
   {
      plTreasure = [ [ &InkyCap, 14],
                     [ &PurpleMushroom, 13 ],
                     [ &Sapphire, 9 ],
                     [ &Diamond, 9 ],
                     [ &Ruby, 7 ],
                     [ &BlueDragonScale, 15],
                     [ &DarkAngelFeather, 15],
                     [ &HoldWand, 1],
		             [ &BlindWand, 1 ],
                     [ &MysticSword, 5 ],
		             [ &DispellIllusionScroll, 3 ],
		             [ &ShadowFormPotion, 5 ],
                     [ &PlateArmor, 3 ]
                   ];

      propagate;
   }

end
