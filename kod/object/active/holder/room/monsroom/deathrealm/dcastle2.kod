///////////////////////////////////////////////////////////////////////////////
DeathRealmCastle2 is DeathRealm

constants:

   include blakston.khd

resources:

   room_DeathRealm_Castle2 = greeny.roo
   DeathRealm_Castle2_music = cave.ogg

   portal_dre = \
      "Through the portal, you see...home. "

classvars:

   viTeleport_row = 13
   viTeleport_col = 2

   viTerrain_Type = TERRAIN_SEWERS | TERRAIN_CASTLE

properties:

   piRoom_num = RID_DCASTLE2
   prRoom = room_DeathRealm_Castle2
   prMusic = DeathRealm_Castle2_music

   prMapChanges = FALSE

   poPortalDR = $

messages:

   CreateStandardExits()
   {
      plExits = $;

      plExits = Cons([ 25, 2, RID_DCASTLE1, 5, 32, ROTATE_NONE ],plExits);

      return;
   }

   Enter(who=$)
   {
      Send(self,@NewHold,#what=who,#new_row=24,#new_col=2,
            #new_angle=ROTATE_NONE);

      return;
   }

   CreateStandardObjects()
   {
      poPortalDR = Create(&DeathRealmExit,#desc=portal_dre,#dest_room_num=RID_TOS_INN,
                        #dest_col=7,#dest_row=8);
      Send(self,@NewHold,#what=poPortalDR,#new_row=1,#new_col=12,
            #fine_row=48,#fine_col=32,#new_angle=ANGLE_SOUTH);

      propagate;
   }

end
