FrontMask is FaceMask

constants:

   include blakston.khd

resources:

   FrontMask_name_rsc = "front man mask"
   FrontMask_icon_male_rsc = frontman.bgf
   FrontMask_icon_female_rsc = frontman.bgf
   FrontMask_desc_rsc = \
      "By wearing this mask you become, The Front Man.  Keep"
      "the game fair, or you will be eliminated."

classvars:

   vrName = FrontMask_name_rsc
   vrDesc = FrontMask_desc_rsc
   vrIcon = FrontMask_icon_male_rsc

   vrMaleIcon = FrontMask_icon_male_rsc
   vrFemaleIcon = FrontMask_icon_female_rsc

properties:


messages:

NewUsed(what = $)
{
  local oAnon;

  oAnon = Send(SYS,@FindSpellByNum,#Num=SID_ANONYMITY);
  if NOT Send(self,@IsEnchanted,#what=oAnon)
  {
	   Send(oAnon,@CastSpell,#who=what,#lTargets=[what],#iSpellPower=99,#bItemCast=TRUE);
  }

  propagate;
}

NewUnsed(what = $)
{
  local oAnon;

  oAnon = Send(SYS,@FindSpellByNum,#Num=SID_ANONYMITY);
  if Send(self,@IsEnchanted,#what=oAnon)
  {
   Send(what,@RemoveEnchantment,#what=oAnon);
  }

  propagate;
}

end
